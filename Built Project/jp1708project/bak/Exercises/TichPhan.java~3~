public class TichPhan {
    public static float getTichPhan(float a, float b, float n) {
        float S=0;
        float x=0;
        float h=(float)(b-a)/n;
        for(int i=0;i<n;i++){
            x+=(a+i*h);
            S=h*x;
        }
       return S;
    }

    public static void main(String[] args) {

    }
}
