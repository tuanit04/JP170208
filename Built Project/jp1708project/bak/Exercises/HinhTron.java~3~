public class HinhTron {
    public static float getHinhTron(float r) {
        float cv=0;
        if(r>0){
            cv=2*((float)(Math.PI)*r*r);
        }
        return cv;
    }

    public static void main(String[] args) {
        HinhTron hinhtron = new HinhTron();
    }
}
