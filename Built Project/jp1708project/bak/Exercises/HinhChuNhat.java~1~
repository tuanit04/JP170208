public class HinhChuNhat {
    public static int getChuVi(int a, int b) {
        int p=0;
        if(a*b!=0){
            p=2*(a+b);
        }

        return p;
    }
    public static int getDienTich(int a, int b){
        int s=0;
        if(a*b!=0){
            s=a*b;
        }
        return s;
    }

    public static void main(String[] args) {

        int n= (int)(Math.random()*100);
        int m= (int)(Math.random()*100);
    }
}
